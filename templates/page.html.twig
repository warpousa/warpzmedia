{# page.html.twig for warpedZ #}

{# 
  IMPORTANT:
  Drupal expects the page render array to be printed as {{ page }}.
  This ensures contextual forms, block visibility, and multilingual
  conditions work correctly.
#}

{# We do NOT recreate <html> or <body> here â€” html.html.twig handles that. #}

{{ page_top }}

<header role="banner">
  {# Branding block (from block--system-branding-block.html.twig) #}
  {% if page.header %}
    <div class="region-header">
      {{ page.header }}
    </div>
  {% endif %}

  {# Primary menu region #}
  {% if page.primary_menu %}
    <nav role="navigation" aria-label="Main navigation">
      {{ page.primary_menu }}
    </nav>
  {% endif %}
</header>

<main role="main">
  <a id="main-content" tabindex="-1"></a>

  {# Motion toggles #}
  {% include '@warpedZ/partials/motion-toggle.html.twig' %}

  {# Flavor toggles #}
  {% include '@warpedZ/partials/flavor-toggles.html.twig' %}

  {# The main content region #}
  {% if page.content %}
    <div class="region-content">
      {{ page.content }}
    </div>
  {% endif %}
</main>

<footer role="contentinfo">
  {% if page.footer %}
    <div class="region-footer">
      {{ page.footer }}
    </div>
  {% endif %}
</footer>

{{ page_bottom }}